{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Bazel: Build All",
            "type": "shell",
            "command": "bazel",
            "args": ["build", "//..."],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Bazel: Build Framework",
            "type": "shell",
            "command": "bazel",
            "args": ["build", "//framework:framework_core"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Bazel: Build Services",
            "type": "shell",
            "command": "bazel",
            "args": ["build", "//services:all_services"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Bazel: Run Demo",
            "type": "shell",
            "command": "bazel",
            "args": ["run", "//:service_framework_demo"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Bazel: Run REST API Demo",
            "type": "shell",
            "command": "bazel",
            "args": ["run", "//services/rest_api:rest_api_demo"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Bazel: Run Weather Demo",
            "type": "shell",
            "command": "bazel",
            "args": ["run", "//services/weather:weather_main"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Bazel: Run Tests",
            "type": "shell",
            "command": "bazel",
            "args": ["test", "//framework:framework_test"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Bazel: Clean",
            "type": "shell",
            "command": "bazel",
            "args": ["clean"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Make: Build All",
            "type": "shell",
            "command": "make",
            "args": ["all"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Make: Run Demo",
            "type": "shell",
            "command": "make",
            "args": ["run-demo"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "CMake: Configure and Build",
            "type": "shell",
            "command": "bash",
            "args": ["-c", "mkdir -p build && cd build && cmake .. && make"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
